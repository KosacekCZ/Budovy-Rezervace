@using System.Collections
@model Room
<body>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>@ViewData["buildingName"]</h2>
                        <h6>@ViewData["buildingAdress"]</h6>
                        <hr/>
        </div>
        <div class="col-3">
            <div class="control-panel-block">
                <h3>Add Room</h3>
                <hr/>
                <form method="post" asp-controller="Home" asp-action="CreateRoom">
                    <label for="roomNum">Room No.</label>
                    <input name="roomNum" type="number"/>
                    <label for="location">Location</label>
                    <input name="location" type="text"/>
                    <label for="descr">Room Description</label>
                    <textarea type="text" name="descr"></textarea>
                    <input class="btn-primary" type="submit"/>
                </form>
            </div>
        </div>
        <div class="col-9 room-scheme">

            @{
                foreach (var room in (IEnumerable)ViewData["rooms"])
                {
                    <div>
                        <h3>@room</h3>
                    </div>
                }
            }

        </div>
    </div>
</div>
</body>